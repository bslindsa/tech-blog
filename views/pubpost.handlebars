<div class="card public-post">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
        <p class="card-text">{{post.content}}</p>
    </div>
    <button id="comment">Comment</button>
</div>

{{!-- {{#if comment}} --}}
<div>
    <form class="form comment-form">
        <div class="form-group mb-3">
            <label for="comment" class="col-sm-4 col-form-label custom-label">Comment:</label>
            <input class="form-input col-sm-6" type="text" id="comment" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary cssbtn" id="add-comment" type="submit">Add Comment</button>
        </div>
    </form>
</div>
{{!-- {{/if}} --}}