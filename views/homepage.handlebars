<div>
    {{#if posts.length}}
    <div class="posts d-flex flex-column-reverse" data-id="98">
        {{#each posts as |post|}}
        <div class="card public-post" id="post-{{post.id}}" data-id="{{post.id}}">
            <div class="card-body">
                <h5 class="card-title">{{post.title}}</h5>
                <p>Posted by {{post.user.name}} on {{format_date date_created}}</p>
                <p class="card-text">{{post.content}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/homepage.js"></script>