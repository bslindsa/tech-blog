{{!-- Existing Blog Posts
Navigation Links for Homepage & Dashboard
Option to log in --}}


<div class="posts">
    {{#if posts.length}}
    <div class="d-flex flex-column-reverse">
        {{#each posts as |post|}}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{post.title}}</h5>
                <p>Posted by {{post.user.name}} on {{format_date date_created}}</p>
                <p class="card-text">{{post.content}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>